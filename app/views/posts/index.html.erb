<% @posts.each do |post| %>
<p><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
<p><%= post.content%> <%= link_to 'Delete', post_path(post), :method => :delete, :confirm => 'Are you sure?' %></p>

<% end %>

<%= form_for(@post) do |f| %>
  <%= f.text_field :content%>
  <%= f.submit '登録する'%>
<% end %>
